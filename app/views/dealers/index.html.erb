<%= content_for :page_header do %>
    Listing Dealers
<% end %>

<table>
  <tr>
    <th>Name</th>

    <th>Catchment of consumers</th>
    <th>Desired commission</th>
    <th>Final commission</th>
    <th>Dealer category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dealers.each do |dealer| %>
  <tr>
    <td><%= dealer.name %></td>

    <td><%= dealer.catchment_of_consumers %></td>
    <td><%= dealer.desired_commission %></td>
    <td><%= dealer.final_commission %></td>
    <td><%= dealer.dealer_category_id %></td>
    <td><%= link_to 'Show', dealer %></td>
    <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
    <td><%= link_to 'Destroy', dealer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

