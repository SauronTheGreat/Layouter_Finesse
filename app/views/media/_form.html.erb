<%= form_for(@medium) do |f| %>
  <% if @medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
      <% @medium.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.number_field :cost %>
  </div>
  <div class="field">
    <%= f.label :impact_id %><br />
    <%= f.select :impact_id ,Impact.all.collect{|impact|[impact.name,impact.id]}%>
  </div>

  <div class="field">
    <%= f.label :unit_id %><br />
    <%= f.select :unit_id ,Unit.all.collect{|unit|[unit.name,unit.id]}%>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
