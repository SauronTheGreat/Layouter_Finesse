<%= content_for :page_header do %>
    Listing Media
<% end %>

<% @medium=Medium.new %>
<%= content_for :secondary_content do %>
    <h3>Add New Medium</h3>
    <div style="margin-left:-40%;margin-top: 10%;">
      <%= render 'form' %>
    </div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Impact</th>
    <th>Unit</th>


    <th></th>
    <th></th>
  </tr>

  <% @media.each do |medium| %>
      <tr>



        <td><%= medium.name %></td>
        <td><%= medium.cost %></td>
        <td><%= Impact.find(medium.impact_id).name %></td>
        <td><%= Unit.find(medium.unit_id).name %></td>


        <td><%= link_to 'Edit', edit_medium_path(medium), :class=>"edit" %></td>
        <td><%= button_to 'Destroy', medium, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br/>



