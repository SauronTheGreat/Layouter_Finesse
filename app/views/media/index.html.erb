<%= content_for :main_content do %>
<h1>Listing media</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Impact</th>
    <th>Unit</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @media.each do |medium| %>
  <tr>
    <td><%= medium.name %></td>
    <td><%= medium.cost %></td>
    <td><%= medium.impact_id %></td>
    <td><%= medium.unit_id %></td>

    <td><%= link_to 'Show', medium %></td>
    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Medium', new_medium_path %>

<% end %>