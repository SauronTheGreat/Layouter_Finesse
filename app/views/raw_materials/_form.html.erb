<div class="row">
  <div class="span7">
    <%= form_for(@raw_material) do |f| %>
        <% if @raw_material.errors.any? %>
            <div id="error_explanation" class="offset2">
              <h2><%= pluralize(@raw_material.errors.count, "error") %> prohibited this raw_material from being
                saved:</h2>

              <ul>
                <% @raw_material.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="cleafix">
          <%= f.label :name %>

          <div class="input">
            <%= f.text_field :name %>
          </div>
        </div>
        <br>


        <div class="cleafix">
          <%= f.label :price_per_kg %>

          <div class="input">
            <%= f.number_field :price_per_kg %>
          </div>
        </div>


        <br/>
        <br/>

        <div class="input">

          <%= f.submit "Confirm Decision", :class=>"primary btn" %>


        </div>
    <% end %>
  </div>
</div>