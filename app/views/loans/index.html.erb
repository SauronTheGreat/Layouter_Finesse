




<%= content_for :page_header do %>
    Listing <span style="color: white;">Loans</span>
<% end %>

<% @loan||=Loan.new %>
<%= content_for :secondary_content do %>
    <h3>Add New Loan</h3>
    <div style="margin-left: -30%;margin-top: 10%">
      <%= render 'form' %>

    </div>

<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Loan type</th>

    <th></th>
    <th></th>
  </tr>

  <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.name %></td>
        <td><%= LoanType.find(loan.loan_type_id).name %></td>

        <td><%= link_to 'Edit', edit_loan_path(loan), :class=>"edit", :id=>loan.id %></td>
        <td><%= button_to 'Destroy', loan, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br/>


