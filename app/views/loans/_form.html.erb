<div class="row">
  <div class="span7">
    <%= form_for(@loan) do |f| %>
        <% if @loan.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

              <ul>
                <% @loan.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="clearfix">
          <%= f.label :name %>
          <div class="input">
            <%= f.text_field :name, :class=>"xlarge" %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :loan_type_id %>
          <div class="input">
            <%= f.select :loan_type_id, LoanType.all.collect { |type| [type.name, type.id] }, :class=>"xlarge" %>
          </div>
        </div>

        <div class="input">

                <%= f.submit "Confirm Decision", :class=>"primary btn" %>


        </div>
    <% end %>
  </div>
</div>