<%= content_for :main_content do %>
<h1>Listing player_round_investments</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Round</th>
    <th>Round investment</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @player_round_investments.each do |player_round_investment| %>
  <tr>
    <td><%= player_round_investment.player_id %></td>
    <td><%= player_round_investment.round_id %></td>
    <td><%= player_round_investment.round_investment_id %></td>
    <td><%= player_round_investment.amount %></td>
    <td><%= link_to 'Show', player_round_investment %></td>
    <td><%= link_to 'Edit', edit_player_round_investment_path(player_round_investment) %></td>
    <td><%= link_to 'Destroy', player_round_investment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player round investment', new_player_round_investment_path %>
<% end %>