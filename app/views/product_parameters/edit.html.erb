    <%= form_for(@product_parameter) do |f| %>



        <% if @product_parameter.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@product_parameter.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product_parameter.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= f.hidden_field :product_id, :value=>@product_parameter.product_id %>
        <%= f.hidden_field :raw_material_id, :value=>@product_parameter.raw_material_id %>


