          <%= f.label RawMaterial.find(@product_parameter.raw_material_id).name %>
          <div class="input">
            <%= f.number_field :value, :class=>"xlarge" %>
          </div>
        </div>

        <div class="row">
          <div class="span7 offset3">

                <%= f.submit "update", :class=>"primary btn" %>

             </div>
            </div>
    <% end %>

