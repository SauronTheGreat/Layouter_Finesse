<div class="row">
  <div class="span7 offset3">
    <%= form_for(@case_study) do |f| %>
        <% if @case_study.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@case_study.errors.count, "error") %> prohibited this case_study from being saved:</h2>

              <ul>
                <% @case_study.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="clearfix">
          <%= f.label :name %>
          <div class="input">
            <%= f.text_field :name, :class=>"xlarge" %>
          </div>
        </div>
        <div class="clearfix">
          <%= f.label :description %>
          <div class="input">
            <%= f.text_area :description, :class=>"xlarge" %>
          </div>
        </div>
        <%= f.hidden_field :facilitator_id, :value=>@facilitator.id %>
        <div class="row">
          <div class="span1 offset3">
            <% if params[:action]== "new" %>
                <%= f.submit "Submit", :class=>"primary btn" %>
            <% else %>
                <%= f.submit "Update", :class=>"primary btn" %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>