<script type="text/javascript">
    $(function() {
        $('#new_form').modal({
            backdrop: true,
            keyboard: true
        });

        $(".new").click(function(event) {
            event.preventDefault();
            $.get($(this).attr("href"), function(data) {
                $(".modal-body").html(data);

            });

            $("#new_form").modal("toggle");

        });




    });
</script>

