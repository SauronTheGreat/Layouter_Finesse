<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing factory_vendors</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Vendor</th>

    <th>Factory</th>

    <th></th>
  </tr>

<% @factory_vendors.each do |factory_vendor| %>
  <tr>

    <td><%= factory_vendor.vendor_id %></td>

    <td><%= factory_vendor.factory_id %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), factory_vendor, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_factory_vendor_path(factory_vendor), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), factory_vendor, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_factory_vendor_path, :title=>"Add a factory_vendor" %>
<% end %>
<%= content_for :footer do %>
<% end %>

