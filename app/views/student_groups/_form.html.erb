<% @student_group=StudentGroup.new %>
<% @facilitator=Facilitator.find_by_user_id(current_user.id) %>

<div class="row">
  <div class="span7 ">
    <%= form_for(@student_group) do |f| %>
        <% if @student_group.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@student_group.errors.count, "error") %> prohibited this student_group from being
                saved:</h2>

              <ul>
                <% @student_group.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="clearfix">
          <%= f.label :name %>
          <div class="input">
            <%= f.text_field :name, :class=>"xlarge" %>
          </div>
        </div>
        <%= f.hidden_field :facilitator_group_id, :value=>@facilitator.id %>


        <div class="row">
          <div class="span1 offset3">

                <%= f.submit "Submit", :class=>"primary btn" %>

          </div>
        </div>
    <% end %>
  </div>
</div>