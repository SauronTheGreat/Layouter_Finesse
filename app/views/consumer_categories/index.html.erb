<%= content_for :page_header do %>
    Listing <span style="color: white"> Consumer Category</span>
<% end %>
<% @consumer_category=ConsumerCategory.new %>
<%= content_for :secondary_content do %>
    <h3> New Consumer Category</h3>
    <div style="margin-left: -80%">
      <%= render 'form' %>

    </div>

<% end %>

<table>
  <tr>
    <th>Name</th>

    <th></th>
    <th></th>
  </tr>

  <% @consumer_categories.each do |consumer_category| %>
      <tr>
        <td><%= consumer_category.name %></td>

        <td><%= link_to 'Edit', edit_consumer_category_path(consumer_category), :class=>"edit" %></td>
        <td><%= button_to 'Destroy', consumer_category, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br/>



