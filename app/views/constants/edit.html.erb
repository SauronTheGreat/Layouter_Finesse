<h2>
  Editing <%= @constant.name %>
</h2>
<div class="row">
  <div class="span7" style="margin-left: -10%;margin-top: 0%">
    <%= form_for(@constant) do |f| %>
        <% if @constant.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@constant.errors.count, "error") %> prohibited this constant from being saved:</h2>

              <ul>
                <% @constant.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="clearfix constant_name">
          <%= f.label :name %>
          <div class="input">
            <%= f.text_field :name, :class=>"xlarge" %>
          </div>
        </div>
        <div class="clearfix constant_value">
          <%= f.label :value %>
          <div class="input">
            <%= f.number_field :value, :class=>"xlarge" %>
          </div>
        </div>

        <div class="input">

          <%= f.submit "Add Constant", :class=>"primary btn" %>


        </div>
    <% end %>
  </div>
</div>