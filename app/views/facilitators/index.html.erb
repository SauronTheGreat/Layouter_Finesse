<%= content_for :page_header do %>
    Listing Facilitator
<% end %>

<table>
  <tr>

    <th>User</th>
    <th>Client</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilitators.each do |facilitator| %>
  <tr>

    <td><%= User.find(facilitator.user_id).username%></td>
    <td><%= Client.find(facilitator.client_id).name %></td>
    <td><%= link_to 'Show', facilitator %></td>
    <td><%= link_to 'Edit', edit_facilitator_path(facilitator) %></td>
    <td><%= link_to 'Destroy', facilitator, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

