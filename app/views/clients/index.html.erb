


<%= content_for :page_header do %>
    Listing <span style="color: white;"> Clients</span>
<% end %>

<% @client||=Client.new %>
<%= content_for :secondary_content do %>
    <h3>Add New Client</h3>
    <div style="margin-left: -30%">
      <%= render 'form' %>
    </div>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Client type</th>

    <th></th>
    <th></th>
  </tr>

  <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.client_type %></td>

        <td><%= link_to "Edit", edit_client_path(client) ,:class => "edit",:id => client.id%></td>
        <td><%= button_to "Destroy", client, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>
<br/>


