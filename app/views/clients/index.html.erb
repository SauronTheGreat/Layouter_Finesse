
<%= content_for :header do %>
    <h3>Listing clients</h3>
    <% end %>

<%= content_for :main_content do %>


<table>
  <tr>
    <th>Name</th>
    <th>Client type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.name %></td>
    <td><%= client.client_type %></td>
    <td><%= link_to image_tag(icon("show"), :size=>"60x60"), client %></td>
    <td><%= link_to image_tag(icon("edit"), :size=>"60x60"), edit_client_path(client) %></td>
    <td class="delete"><%= link_to image_tag(icon("delete"),:size=>"60x60"), client, confirm: 'Are you sure?', method: :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag(icon('new'),:size=>"60x60"), new_client_path %>

<% end %>